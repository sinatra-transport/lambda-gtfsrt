{
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "allowJs": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "sourceMap": false,
    "module": "esnext",
    "moduleResolution":"bundler",
    "esModuleInterop": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, 
    "isolatedModules": true, 
    "resolveJsonModule": true,
    "types": ["jest", "node"]
  },
  "include": [
    "./package.json",
    "./index.ts",
    "./src",
    "tests/**/*.test.ts"
  ],
  "exclude": [
    "node_modules", 
    "t.ts",
    "gen-proto.sh",
    "test_data/*",
    "terraform/*"
  ]
}